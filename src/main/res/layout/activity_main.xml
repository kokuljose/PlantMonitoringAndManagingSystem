<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity" android:background="#C70039"
    >


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plant Monitoring"
        android:background="#ff5733"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:id="@+id/header1"

        android:onClick="onClickStart"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="30px"

        android:layout_centerHorizontal="true"
        android:id="@+id/space1"

        android:layout_below="@+id/header1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:background="#DAF7A6"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonStart"

        android:layout_below="@+id/space1"
        android:onClick="onClickStart"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="30px"

        android:layout_centerHorizontal="true"
        android:id="@+id/space2"

        android:layout_below="@+id/buttonStart"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Sensor Readings"
        android:layout_centerHorizontal="true"
        android:background="#DAF7A6"
        android:id="@+id/buttonSend"
        android:onClick="onClickSend"
        android:layout_below="@+id/space2"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/buttonSend"
        android:layout_centerHorizontal="true"
        android:textColor="#DAF7A6"
        android:maxLines="18"
        android:minLines="18"
         />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Connection"
        android:layout_centerHorizontal="true"
        android:background="#DAF7A6"
        android:id="@+id/buttonStop"
        android:layout_below="@+id/textView"

        android:onClick="onClickStop"/>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="30px"
        android:layout_centerHorizontal="true"
        android:id="@+id/space3"

        android:layout_below="@+id/buttonStop"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_centerHorizontal="true"
        android:background="#DAF7A6"
        android:id="@+id/buttonClear"
        android:layout_below="@+id/space3"

        android:onClick="onClickClear"/>
</RelativeLayout>
